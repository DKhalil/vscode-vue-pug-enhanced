{
  "name": "vscode-vue-pug-enhanced",
  "displayName": "Vue Pug Enhanced",
  "description": "Pug syntax for Vue files and enhanced Pug features",
  "publisher": "quanzaiyu",
  "version": "1.0.1",
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.51.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/quanzaiyu/vscode-vue-pug-enhanced.git"
  },
  "tags": [
    "vscode",
    "jade",
    "pug",
    "html2pug",
    "html2jade",
    "pug2html",
    "jade2html"
  ],
  "keywords": [
    "Vue",
    "Pug",
    "Snippets",
    "Formatters",
    "Vue Snippets",
    "Vue Pug Snippets",
    "Vue.js",
    "Pug.js"
  ],
  "categories": [
    "Snippets",
    "Programming Languages",
    "Formatters",
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.transformHtml2Pug",
    "onCommand:extension.transformPug2Html"
  ],
  "main": "./src/main.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.transformHtml2Pug",
        "title": "Html to Pug"
      },
      {
        "command": "extension.transformPug2Html",
        "title": "Pug to Html"
      }
    ],
    "snippets": [
      {
        "language": "jade",
        "path": "./src/snippets/pug.json"
      }
    ]
  },
  "scripts": {
    "push": "git push origin master && git push coding master",
    "build": "vsce package -o vscode-vue-pug-enhanced.vsix",
    "ext": "yarn build && code --install-extension vscode-vue-pug-enhanced.vsix",
    "publish": "vsce publish",
    "lint": "eslint .",
    "pretest": "yarn run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.0",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.51.0",
    "eslint": "^7.9.0",
    "glob": "^7.1.6",
    "mocha": "^8.1.3",
    "typescript": "^4.0.2",
    "vscode-test": "^1.4.0"
  },
  "dependencies": {
    "html2jade": "^0.8.6",
    "pug": "^3.0.0"
  }
}
