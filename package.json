{
  "name": "vscode-vue-pug-enhanced",
  "displayName": "Vue Pug Enhanced",
  "description": "Pug syntax for Vue files and enhanced Pug features",
  "publisher": "quanzaiyu",
  "version": "1.0.8",
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.51.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/quanzaiyu/vscode-vue-pug-enhanced.git"
  },
  "bugs": {
    "url": "https://github.com/quanzaiyu/vscode-vue-pug-enhanced/issues"
  },
  "tags": [
    "vscode",
    "jade",
    "pug",
    "html2pug",
    "html2jade",
    "pug2html",
    "jade2html"
  ],
  "keywords": [
    "Vue",
    "Pug",
    "Snippets",
    "Formatters",
    "Vue Snippets",
    "Vue Pug Snippets",
    "Vue.js",
    "Pug.js"
  ],
  "categories": [
    "Snippets",
    "Programming Languages",
    "Formatters",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:pug",
    "onCommand:extension.formatPug",
    "onCommand:extension.transformHtml2Pug",
    "onCommand:extension.transformPug2Html"
  ],
  "main": "./src/main.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.formatPug",
        "title": "Format Pug",
        "category": "Vue Pug Enhanced"
      },
      {
        "command": "extension.formatPugSelected",
        "title": "Format Pug Selected",
        "category": "Vue Pug Enhanced"
      },
      {
        "command": "extension.transformHtml2Pug",
        "title": "Html to Pug",
        "category": "Vue Pug Enhanced"
      },
      {
        "command": "extension.transformPug2Html",
        "title": "Pug to Html",
        "category": "Vue Pug Enhanced"
      }
    ],
    "snippets": [
      {
        "language": "jade",
        "path": "./src/snippets/pug.json"
      }
    ],
    "configuration": {
			"type": "object",
			"title": "Pug",
			"properties": {
        "vue-pug-enhanced.formatter-pug.omitDiv": {
          "type": "boolean",
          "default": false,
          "description": "Omit div tag when it has id or class."
        },
        "vue-pug-enhanced.formatter-pug.fillTab": {
          "type": "boolean",
          "default": false,
          "description": "Indent with Tabs, if false, with spaces."
        },
        "vue-pug-enhanced.formatter-pug.tabSize": {
          "type": "number",
          "default": 2,
          "description": "When `fillTab` is false, fill `tabSize` spaces."
        }
			}
		}
  },
  "scripts": {
    "push": "node push.js",
    "build": "vsce package -o vscode-vue-pug-enhanced.vsix",
    "ext": "yarn build && code --install-extension vscode-vue-pug-enhanced.vsix",
    "publish": "vsce publish",
    "lint": "eslint .",
    "pretest": "yarn run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.0",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.51.0",
    "eslint": "^7.9.0",
    "glob": "^7.1.6",
    "mocha": "^8.1.3",
    "typescript": "^4.0.2",
    "vscode-test": "^1.4.0"
  },
  "dependencies": {
    "html2jade": "^0.8.6",
    "pug": "^3.0.0",
    "pug-beautify": "^0.1.1"
  }
}
